[Unit]
Description=Lumos Tempum Daemon
After=network.target

[Service]
WorkingDirectory=/opt/lumostempum
ExecStart=/opt/lumostempum/main.py
ExecReload=touch ~/.config/lumostempum/LUMOSTEMPUM.STOP;/opt/lumostempum/main.py
ExecStop=touch ~/.config/lumostempum/LUMOSTEMPUM.STOP
NotifyAccess=all
Restart=on-failure
Type=simple
User=%i

[Install]
WantedBy=multi-user.target
